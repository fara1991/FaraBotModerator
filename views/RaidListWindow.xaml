<Window
    x:Class="FaraBotModerator.views.RaidListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="FaraBotModeratorRaidList"
    Height="600"
    Width="600"
    Icon="/resources/App.ico"
    ResizeMode="CanMinimize">
    <GroupBox Height="600" Width="600" Header="FaraBotTwitchRaidList" HorizontalAlignment="Center"
              VerticalAlignment="Top">
        <Canvas Height="550" Width="580">
            <DataGrid x:Name="TwitchRaidDataGrid"
                      Height="460"
                      Width="580"
                      HeadersVisibility="Column"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      CanUserResizeRows="True"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      AlternatingRowBackground="MediumPurple"
                      AlternationCount="2"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      EnableColumnVirtualization="True"
                      EnableRowVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <!-- 表示はしないがレイドコマンド用に保持する -->
                    <DataGridTextColumn Header="LoginId" IsReadOnly="True" Visibility="Hidden"
                                        Binding="{Binding LoginId}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Target" IsReadOnly="True" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Button Click="DataGridRowRaidButton_OnClick" Content="Raid" Width="60"
                                            Height="32"
                                            Name="Raid" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <Popup x:Name="CopyPopup"
                                           PlacementTarget="{Binding ElementName=CopyButton}"
                                           Placement="Bottom"
                                           PopupAnimation="Fade"
                                           AllowsTransparency="True">
                                        <Border Background="#FF333333"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <TextBlock Text="コピーしました"
                                                       Foreground="White" />
                                        </Border>
                                    </Popup>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name" IsReadOnly="True" Width="100" Binding="{Binding Name}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Game" IsReadOnly="True" Width="150" Binding="{Binding GameName}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="StartedAt" IsReadOnly="True" Width="*"
                                        Binding="{Binding StartedAt}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Viewer" IsReadOnly="True" Width="80" Binding="{Binding Viewer}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="StreamingFollower" VerticalAlignment="Top"
                    Canvas.Left="100"
                    Canvas.Top="470" HorizontalAlignment="Left" Width="180" Height="35"
                    Click="TwitchStreamingFollowerButton_OnClick" />
            <Button Content="StreamingSameGame" VerticalAlignment="Top"
                    Canvas.Left="300"
                    Canvas.Top="470" HorizontalAlignment="Left" Width="180" Height="35"
                    Click="TwitchStreamingSameGameButton_OnClick" />
        </Canvas>
    </GroupBox>
</Window>